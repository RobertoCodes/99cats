<h1> <%= @cat.name %> </h1>


<table>
    <tr>
        <td> Birthday:

        </td>

        <td><%= @cat.birth_date %></td>

    </tr>
    <tr>
        <td>Age:</td>
        <td> <%=  @cat.age%> Years Old

        </td>

    </tr>
    <tr>
        <td>Sex:</td>
        <td> <%= @cat.sex %> </td>

    </tr>
    <tr>
        <td>Color:</td>
        <td> <%= @cat.color %></td>
    </tr>
    <tr>
        <td>Description:</td>
        <td> <%= @cat.description %></td>
    </tr>

    <tr>
        <td>Edit this cat</td>
        <td> <a href="/cats/ <%=@cat.id%>/edit"> Edit this cat </a> </td>
    </tr>

</table>

<h2> Rentals </h2>

<ul>
<% @rentals.each do |rental| %>
  <li> Start date: <%= rental.start_date %>, End date: <%= rental.end_date %>

  <% if rental.pending?%>

  <% end %>
<% end %>

</ul>
